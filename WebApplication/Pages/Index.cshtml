@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form>
    <p>
        Search  <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Date of creation
            </th>
            <th>
                Format
            </th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.medias)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfCreation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Format)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @*<a asp-page="./Edit" asp-route-id="@item.">Edit</a>*@ |
                    <a asp-page="./Details" asp-route-id="@item.MediaId">Details</a> |
                    @*<a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>